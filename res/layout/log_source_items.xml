<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/sourceItems"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:layout_weight="10"/>
    <LinearLayout android:id="@+id/buttonview" android:layout_width="fill_parent" android:background="@drawable/actionbar_bkg"
        android:layout_height="50dip" android:orientation="horizontal" android:gravity="bottom">
        <Button android:id="@+id/btnApply" android:layout_width="0dip" android:background="@drawable/actionbar_btn_left"
            android:layout_height="50dip" android:layout_weight="1" android:text="@string/apply" />
        <ImageView android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:src="@drawable/actionbar_divider" android:scaleType="fitXY"/>
        <Button android:id="@+id/btnCancel" android:layout_width="0dip" android:background="@drawable/actionbar_btn_right"
            android:layout_height="50dip" android:layout_weight="1" android:text="@string/discard"/>
    </LinearLayout>
</LinearLayout>
